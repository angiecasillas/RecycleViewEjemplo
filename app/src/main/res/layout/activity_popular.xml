<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardView"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mascotaperro1"

            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imgFoto3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mascotaperro4"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imgFoto4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mascotaperro5"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:id="@+id/imgFoto5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mascotaperro6"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"

            android:layout_row="3"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imgFoto2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mascotaperro3"

            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="1" />

    </GridLayout>

</android.support.v7.widget.CardView>